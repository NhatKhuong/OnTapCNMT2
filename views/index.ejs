<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>

<body>
    <div class="container">
        <form action="/" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="email">Ten:</label>
                <input name="ten" type="text" class="form-control" placeholder="Nhap ten" id="">
            </div>
            <div class="form-group">
                <label for="pwd">Nhom:</label>
                <input name="nhom" type="text" class="form-control" placeholder="Nhap nhom" id="">
            </div>
            <div class="form-group">
                <label for="pwd">Ten tac gia:</label>
                <input name="tacgia" type="text" class="form-control" placeholder="Nhap ten tac gia" id="">
            </div>
            <div class="form-group">
                <label for="pwd">Chi so ISBN:</label>
                <input name="chiso" type="text" class="form-control" placeholder="Nhap chi so" id="">
            </div>
            <div class="form-group">
                <label for="pwd">So Trang:</label>
                <input name="sotrang" type="text" class="form-control" placeholder="Nhap so trang" id="">
            </div>
            <div class="form-group">
                <label for="pwd">Nam xuat ban:</label>
                <input name="namxuatban" type="text" class="form-control" placeholder="Nhap nam xuat ban" id="">
            </div>
            <button type="submit" class="btn btn-primary">ADD</button>
        </form>
        <h2>Table Head Colors</h2>
        <form id="delete" method="POST" action="/delete" enctype="multipart/form-data">
            <button type="submit" class="btn btn-primary">DELETE</button>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Ten bai bao</th>
                        <th>Ten tac gia</th>
                        <th>Chi so ISBI</th>
                        <th>So trang</th>
                        <th>Nam xuat ban</th>
                        <th>Chon</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < Sachs.length;i++){%>
                        <tr>
                            <td>
                                <%=Sachs[i].ten%>
                            </td>
                            <td>
                                <%=Sachs[i].tacgia%>
                            </td>
                            <td>
                                <%=Sachs[i].chiso%>
                            </td>
                            <td>
                                <%=Sachs[i].sotrang%>
                            </td>
                            <td>
                                <%=Sachs[i].namxuatban%>
                            </td>
                            <td><input type="checkbox" name="<%=Sachs[i].id%>" /></td>
                        </tr>
                        <%} %>
                </tbody>
            </table>
        </form>

    </div>
</body>

</html>