<body>
    <div class="container">
        <form action="/" method="POST" onsubmit="return checkValidate()" enctype="multipart/form-data">
            <div class="form-group">
                <label for="email">Ten:</label>
                <input name="ten" type="text" class="form-control" placeholder="Nhap ten" id="inputten">
                <label class="noti" id="ten"></label>
            </div>
            <div class="form-group">
                <label for="pwd">Nhom:</label>
                <input name="nhom" type="text" class="form-control" placeholder="Nhap nhom" id="inputnhom">
                <label class="noti" id="nhom"></label>
            </div>
            <div class="form-group">
                <label for="pwd">Ten tac gia:</label>
                <input name="tacgia" type="text" class="form-control" placeholder="Nhap ten tac gia" id="inputtacgia">
                <label class="noti" id="tacgia"></label>
            </div>
            <div class="form-group">
                <label for="pwd">Chi so ISBN:</label>
                <input name="chiso" type="text" class="form-control" placeholder="Nhap chi so" id="inputchiso">
                <label class="noti" id="chiso">Ten:</label>
            </div>
            <div class="form-group">
                <label for="pwd">So Trang:</label>
                <input name="sotrang" type="text" class="form-control" placeholder="Nhap so trang" id="inputsotrang">
                <label class="noti" id="sotrang"></label>
            </div>
            <div class="form-group">
                <label for="pwd">Nam xuat ban:</label>
                <input name="namxuatban" type="text" class="form-control" placeholder="Nhap nam xuat ban" id="inputnam">
                <label class="noti" id="nam"></label>
            </div>
            <button type="submit" class="btn btn-primary">ADD</button>
        </form>
        <h2>Table Head Colors</h2>
        <form id="delete" method="POST" action="/delete" enctype="multipart/form-data">
            <button type="submit" class="btn btn-primary">DELETE</button>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>STT</th>
                        <th>Ten bai bao</th>
                        <th>Ten tac gia</th>
                        <th>Chi so ISBI</th>
                        <th>So trang</th>
                        <th>Nam xuat ban</th>
                        <th>Chon</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < Sachs.length;i++){%>
